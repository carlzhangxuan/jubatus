.PHONY: all clean check
OCAMLINCLUDES += ../src

FILES[] =
  cpp_test
  file_util_test

USE_OCAMLFIND = true
OCAMLPACKS[] = oUnit

PROGRAM = test
OCAML_LIBS += ../src/target
OCAML_OTHER_LIBS += str

clean:
  rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.cma *.cmxa

.DEFAULT: all

all : $(OCamlProgram $(PROGRAM), $(FILES))

check : all
  ./$(PROGRAM)